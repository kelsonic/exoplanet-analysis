<script src="http://code.highcharts.com/highcharts.js"></script>

<%= javascript_include_tag "charts" %>

<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2 center">
    <h2 class="red-text text-darken-2">Exoplanet Discovery Methods</h2>
    <div id="pie-discovery-methods">
    </div>
  </div>
</div>

<div class="divider light-blue"></div>

<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2 center">
    <h2 class="blue-text text-darken-2">Planet Mass vs. Orbital Period</h2>
    <div id="scatter-mass-orbit">
    </div>
  </div>
</div>

<div class="divider red"></div>

<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2 center">
    <h2 class="red-text text-darken-2">Solar Mass vs. Radii</h2>
    <div id="scatter-solar">
    </div>
  </div>
</div>

<div class="row center">
  <%= link_to "Back to Data", exoplanets_data_path, class: "btn light-green" %>
</div>
